			log("__**ERROR** - crmInsertCustomer - " + e);
			crmLog(0, "Insert", "Error inserting customer - " + e, 1);	
		}
		finally {
		  if(stmt) stmt.close();
		  if(con) con.close();
		}
	
	}
	else {
		//Update details on customer record
		crmUpdateCustomerDetails(custID, cust.Title, cust.otherTitle, cust.Telephone, cust.Mobile);
	}
	
	return custID;
 
}

