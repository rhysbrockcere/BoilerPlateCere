  		collections[1] = moment(rs.getString("Pickup2"));
			found = true;
		}

	}
	catch (e) {
		log("__**ERROR** - getGreenDates - " + e);
		crmLog(0, "Query", "Error getting green dates (UPRN = " + UPRN + ") " + e, 1);
	}
	
	finally	{
	  if(rs) rs.close();
	  if(stmt) stmt.close();
	  if(con) con.close();
	}

	if (found == true) {
		return collections;
	}
	else {
		return "Error";
	}
	
}
