function crmAddPayment(BalanceID, Amount, Reference, AuthCode, AuthCAN, Method) {

	//crmLog(0, "Add", "Adding payment to Balance ID " + BalanceID, 3);
			
	try {

		var con = system.getDatabaseConnection(strCon);
