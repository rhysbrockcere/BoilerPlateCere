/**
 * Checks field for null value and replaces with blank
 * @param s1 string
 * @return string
 */

function stripNull( s1 ){	

	try {
		if (s1 === null) {
			s1 = "";
		}
		else if (s1 == 'null') {
			s1 = "";
		}
		else {
			s1 = replaceQuote(s1)
		}
	}
	catch (e) {
		s1 = s1;
	}
	 
 return s1
}

